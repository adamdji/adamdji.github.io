{
  "name": "oceansofcode.github.io",
  "version": "1.0.0",
  "description": "Portfolio website source code",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "clean": "rm -rf ./dist && mkdir dist",
    "clean:build": "npm run clean && npm run build && npm run build:images",
    "build:html": "cp -r src/html dist/html",
    "build:images": "imagemin src/images --out-dir dist/images",
    "build:sass": "node-sass --output-style compressed --source-map true --source-map-contents src/styles --output dist/styles",
    "build:ts": "tsc",
    "build": "npm run build:html && npm run build:ts && npm run build:sass",
    "watch:sass": "onchange \"src/styles/**/*.scss\" -- npm run build:sass",
    "watch:ts": "onchange \"src/scripts/**/*.ts\" -- npm run build:ts",
    "watch": "parallelshell \"npm run serve\" \"npm run watch:sass\" \"npm run watch:ts\"",
    "serve": "browser-sync start --server --files \"dist/styles/**/*.css, dist/scripts/**/*.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oceansofcode/oceansofcode.github.io.git"
  },
  "keywords": [
    "portfolio",
    "front-end",
    "serverless"
  ],
  "author": "Adam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oceansofcode/oceansofcode.github.io/issues"
  },
  "homepage": "https://github.com/oceansofcode/oceansofcode.github.io#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "browser-sync": "^2.26.7",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-immutable": "^1.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "imagemin": "^7.0.1",
    "node-sass": "^4.14.1",
    "onchange": "^7.0.2",
    "parallelshell": "3.0.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
